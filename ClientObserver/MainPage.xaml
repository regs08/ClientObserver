<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientObserver.MainPage">
<StackLayout>
    <Button Text="Select Configs" Command="{Binding SelectFromAvailableConfigsCommand}" Margin="5"/>

    <CollectionView ItemsSource="{Binding ServerConfigButtons}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Button Text="{Binding ServerName}"
                        Command="{Binding NavigateCommand}" />
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
    <Button Text="Connection Setup" Command="{Binding SetupServerConfigConenction}" Margin="5"/>
</StackLayout>


</ContentPage>
