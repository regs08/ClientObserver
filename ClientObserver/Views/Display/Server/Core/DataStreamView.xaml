<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientObserver.Views.Display.Server.Core.DataStreamView"
             Title="DataStreamView">

    <VerticalStackLayout>

        <Button Text="Back" Command="{Binding GoBackCommand}" />
        <Grid Padding="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- WebView for Video Stream -->
    <WebView Grid.Row="1"
                Source="{Binding }"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                HeightRequest="400"
                WidthRequest="400"
                Margin="20" />

    </Grid>
    </VerticalStackLayout>
</ContentPage>
