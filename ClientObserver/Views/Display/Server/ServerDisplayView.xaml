<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientObserver.Views.Display.Server.ServerDisplayView"
             Title="{Binding ServerName}">
    <VerticalStackLayout
        Spacing="10"
        Padding="30"
        VerticalOptions="StartAndExpand"
        HorizontalOptions="FillAndExpand">

        <!-- Connect Button -->
        <Button
            Text="Connect"
            HorizontalOptions="FillAndExpand"
            Command="{Binding ConnectToDeviceCommand}"
            />
            
        <!-- View Data Stream Button -->
        <Button
            Text="View Data Stream"
            HorizontalOptions="FillAndExpand"
           />
            
        <!-- Troubleshoot Connection Button -->
        <Button
            Text="Troubleshoot Connection"
            HorizontalOptions="FillAndExpand"
            />
            
        <!-- View ServerConfig Button -->
        <Button
            Text="View ServerConfig"
            HorizontalOptions="FillAndExpand"
            />
    </VerticalStackLayout>
</ContentPage>
