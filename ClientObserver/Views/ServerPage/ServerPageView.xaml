<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientObserver.Views.ServerPageView"
             Title="Server Page">

    <ScrollView>
        <StackLayout>
            <Label Text="{Binding ServerConfig}" />
            <Button Text="Configure MQTT Connection"
                    Command="{Binding NavigateToMQTTCommand}" />
            <Button Text="View Logs"
                    Command="{Binding NavigateToLogViewCommand}" />
            <Button Text="View Photos"
                    Command="{Binding NavigateToPhotoViewCommand}" />
            <Button Text="View Stream"
                    Command="{Binding NavigateToStreamViewCommand}" />
        </StackLayout>
    </ScrollView>

</ContentPage>
